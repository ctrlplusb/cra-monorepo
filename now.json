{
  "version": 2,
  "name": "cra-monorepo",
  "builds": [
    { "src": "backend/api/**/*.ts", "use": "@now/node" },
    {
      "src": "frontend/package.json",
      "use": "@now/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "build": {
    "env": {
      "SKIP_PREFLIGHT_CHECK": "true"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/api/$1.ts"
    },
    {
      "src": "/static/(.*)",
      "headers": { "cache-control": "s-maxage=31536000,immutable" },
      "dest": "/frontend/static/$1"
    },
    { "src": "/favicon.ico", "dest": "/frontend/favicon.ico" },
    {
      "src": "/asset-manifest.json",
      "dest": "/frontend/asset-manifest.json"
    },
    { "src": "/manifest.json", "dest": "/frontend/manifest.json" },
    {
      "src": "/precache-manifest.(.*)",
      "dest": "/frontend/precache-manifest.$1"
    },
    {
      "src": "/service-worker.js",
      "headers": { "cache-control": "s-maxage=0" },
      "dest": "/frontend/service-worker.js"
    },
    {
      "src": "/(.*).hot-update.js.map",
      "headers": { "cache-control": "s-maxage=0" },
      "dest": "/frontend/$1.hot-update.js.map"
    },
    {
      "src": "/(.*).hot-update.js",
      "headers": { "cache-control": "s-maxage=0" },
      "dest": "/frontend/$1.hot-update.js"
    },
    {
      "src": "/(.*).hot-update.json",
      "headers": { "cache-control": "s-maxage=0" },
      "dest": "/frontend/$1.hot-update.json"
    },
    {
      "src": "/sockjs-node",
      "dest": "/frontend/sockjs-node"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "headers": { "cache-control": "s-maxage=0" },
      "dest": "/frontend/index.html"
    }
  ]
}
